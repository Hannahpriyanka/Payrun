// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  hourlyRate Float
  timesheets Timesheet[]
  payslips   Payslip[]
}

model Timesheet {
  id          Int      @id @default(autoincrement())
  employeeId  Int
  date        DateTime
  hoursWorked Float
  employee    Employee @relation(fields: [employeeId], references: [id])
}

model Payrun {
  id        Int       @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  createdAt DateTime  @default(now())
  payslips  Payslip[]
}

model Payslip {
  id         Int      @id @default(autoincrement())
  employeeId Int
  payrunId   Int
  grossPay   Float
  employee   Employee @relation(fields: [employeeId], references: [id])
  payrun     Payrun   @relation(fields: [payrunId], references: [id])
}
